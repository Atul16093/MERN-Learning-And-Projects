<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View task</title>
    <%- include("__bootStrap.ejs") %>
    <style>
      body {
        background-color: #f4f7fc;
      }
      .task-card {
        transition: all 0.3s ease-in-out;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
      }
      .task-card:hover {
        transform: scale(1.02);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
      }
      .btn-custom {
        width: 120px;
        font-weight: bold;
        border-radius: 20px;
      }
    </style>
  </head>
  <body>
    <%- include("nav.ejs")%>

    <!-- Filter Buttons -->
    <div class="d-flex justify-content-center gap-3 mt-4">
      <a href="/task/load-task/1" class="btn btn-outline-danger btn-custom">High</a>
      <a href="/task/load-task/2" class="btn btn-outline-warning btn-custom">Medium</a>
      <a href="/task/load-task/3" class="btn btn-outline-success btn-custom">Low</a>
      <a href="/task/view-task" class="btn btn-outline-secondary btn-custom">All</a>
    </div>

    <!-- Task Cards Container -->
    <div class="container mt-4">
      <div class="row g-4">
        <% for(let unit of data){ %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="task-card card border-0">
              <div class="card-header text-center fw-bold  <%= unit.priority_id == 1 ? 'bg-danger' : unit.priority_id == 2 ? 'bg-warning' : unit.priority_id == 3 ? 'bg-success' : '#6c757d'%>">
          <%= unit.date %>
              </div>
              <div class="card-body">
                <h5 class="fw-bold text-primary">Task Title:</h5>
                <p class="mb-2 text-dark"><%= unit.task %></p>
                <h6 class="text-dark"><b>Description:</b></h6>
                <p class="text-dark"><%= unit.description %></p>
                <h6 style="font-weight: 400;"><b>Alloted User:</b></h6>
                <p class=""><%= unit.Name%></p>
              </div>
              <div class="card-footer bg-light d-flex justify-content-between">
                <a onclick="return confirm('Are you sure you want to delete this task?')" href="/task/delete/<%= unit.id%>" 
                   class="btn btn-outline-danger w-50 me-2">Delete</a>
                <a href="/task/update/<%= unit.id%>" class="btn btn-outline-primary w-50">Edit</a>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
