<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <%- include("__bootStrap.ejs")%>
    <style>
        body {
            background: linear-gradient(135deg, #28a745, #17a2b8); /* Green-Blue gradient */
            color: white;
        }
        .hero-section {
            height: 92vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
        .hero-content h1 {
            font-size: 3rem;
            font-weight: bold;
        }
        .hero-content p {
            font-size: 1.2rem;
        }
        .btn-custom {
            font-size: 1.2rem;
            font-weight: bold;
            padding: 10px 25px;
            border-radius: 30px;
            transition: all 0.3s ease-in-out;
        }
        .btn-light:hover {
            background: #e9ecef;
            color: #000;
        }
        .btn-primary:hover {
            background: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <%- include("userNav.ejs")%>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <h1>Welcome, to Dashboard</h1>
            <p>Manage your tasks efficiently and stay on track.</p>
            <div class="mt-4">
                <a href="/usertask/show" class="btn btn-light btn-lg btn-custom me-3">Pending</a>
                <a href="/usertask/completed" class="btn btn-primary btn-lg btn-custom">Complete</a>
            </div>
        </div>
    </div>
</body>
</html>
