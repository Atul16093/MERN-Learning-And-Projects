<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <%- include("__bootStrap.ejs") %>
  </head>
  <body class="bg-light">
    <div class="d-flex justify-content-center align-items-center vh-100">
      <div class="card p-4 shadow-lg rounded" style="width: 350px; height: 460px;">
        <h4 class="text-center mb-3">Sign In</h4>
        
        <form action="/user/sign-in" method="post">
          <div class="mb-3">
            <label class="form-label fw-bold">Email</label>
            <input type="email" name="useremail" class="form-control" placeholder="Enter your email" required>
          </div>

          <div class="mb-3">
            <label class="form-label fw-bold">Password</label>
            <input type="password" name="userpassword" class="form-control" placeholder="Enter your password" required>
          </div>

          <button type="submit" class="btn btn-primary w-100">Sign In</button>

          <div class="text-center mt-3">
            <a href="#" class="text-decoration-none">Forgot Password?</a>
          </div>

          <div class="text-center mt-2">
            <span>Don't have an account? <a href="/user/sign-up" class="text-decoration-none">Sign Up</a></span>
          </div>
          <div class="mt-2 d-flex justify-content-center">
            <span>Login as an admin? <a class="text-decoration-none"  href="/admin/sign-in"> admin
            </a></span>
        </div>
        </form>
      </div>
    </div>
  </body>
</html>
