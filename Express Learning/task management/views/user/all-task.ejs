<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Tasks</title>
    <%- include("__bootStrap.ejs") %>
    <style>
      body {
        background-color: #f4f7fc;
      }
      .task-card {
        transition: all 0.3s ease-in-out;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
      }
      .task-card:hover {
        transform: scale(1.02);
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.15);
      }
      .btn-custom {
        width: 120px;
        font-weight: bold;
        border-radius: 20px;
      }
    </style>
  </head>
  <body>
    <%- include("userNav.ejs")%>

    <!-- Filter Buttons -->
    <!-- <div class="d-flex justify-content-center gap-3 mt-4">
      <a href="#" class="btn btn-outline-danger btn-custom">High</a>
      <a href="#" class="btn btn-outline-warning btn-custom">Medium</a>
      <a href="#" class="btn btn-outline-success btn-custom">Low</a>
      <a href="#" class="btn btn-outline-secondary btn-custom">All</a>
    </div> -->
    <!-- Task Cards Container -->
    <div class="container mt-4">
      <div class="row g-4">
        <%for(let record of userRecord){%>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="task-card card border-0">
                
              <div class=" text-center fw-bold <%= record.priority_id == 1 ? 'bg-danger' : record.priority_id == 2 ? 'bg-warning' : record.priority_id == 3 ? 'bg-success' : '#6c757d'%>" style="height: 5vh">
              <%= record.date%>
            </div>
              <div class="card-body">
                <h5 class="fw-bold text-primary">Task Title:</h5>
                <p class="mb-2 text-dark"><%= record.task%></p>
                <h6 class="text-dark"><b>Description:</b></h6>
                <p class="text-dark"><%=record.description%></p>
              </div>
              <div class="card-footer bg-light d-flex justify-content-center">
                <a onclick="return confirm('Are you sure you completed this task?')" href="/usertask/complete/<%= record.id%>" 
                   class="btn btn-outline-warning w-50 me-2">Complete</a>
              </div>
            </div>
          </div>
          <%}%>
      </div>
    </div>
  </body>
</html>
